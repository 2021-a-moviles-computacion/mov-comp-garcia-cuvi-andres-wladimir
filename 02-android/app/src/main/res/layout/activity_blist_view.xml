<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BListView">

    <ListView
        android:id="@+id/ltvEjemplo"
        android:layout_width="177dp"
        android:layout_height="379dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295" />

    <Button
        android:id="@+id/btnAnadirNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="AÑADIR NÚMERO"
        app:layout_constraintEnd_toEndOf="@+id/ltvEjemplo"
        app:layout_constraintStart_toStartOf="@+id/ltvEjemplo"
        app:layout_constraintTop_toBottomOf="@+id/ltvEjemplo" />
</androidx.constraintlayout.widget.ConstraintLayout>