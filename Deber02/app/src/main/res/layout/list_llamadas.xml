<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">

    <!--    <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp" />-->

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivLlamada"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreLlamada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Andres Garcia"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEstadoLlamada"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="3dp"
                android:src="@drawable/flecha_enviar"/>

            <TextView
                android:id="@+id/tvFechaLlamada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hace 12 minutos" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calls"
            android:layout_gravity="center"
            />

    </LinearLayout>
</LinearLayout>